/* FaceRemedies.css */

body,
html {
  margin: 0;
  padding: 0;
  font-family: 'Segoe UI', sans-serif;
  background: transparent;
  color: #222;
  overflow-x: hidden;
}

.face-remedy-container {
  position: relative;
  z-index: 1;
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bg-video {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  object-fit: cover;
  z-index: -1;
  opacity: 0.4;
  filter: brightness(1.3) contrast(1.1);
}

.main-wrapper {
  background: rgba(255, 255, 255, 0.0); /* Make it fully transparent */
  backdrop-filter: blur(12px); /* Optional: keep or remove blur */
  padding: 30px;
  border-radius: 20px;
  width: 90%;
  max-width: 900px;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
  transition: background 0.3s ease;
}

.topbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.title {
  font-size: 2rem;
  font-weight: bold;
  color: #2e7d32;
}

.dark-toggle {
  background: none;
  border: none;
  font-size: 1.8rem;
  cursor: pointer;
  color: #333;
}

.dark .dark-toggle {
  color: #fff;
}

.search-box {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 20px;
  flex-wrap: wrap;
}

.search-box input {
  flex: 1;
  padding: 10px 14px;
  border: 2px solid #ccc;
  border-radius: 8px;
  font-size: 1rem;
}

.mic,
.search-btn {
  background-color: #4caf50;
  color: white;
  padding: 10px 12px;
  border: none;
  border-radius: 8px;
  font-size: 1rem;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 5px;
}

.search-btn.stop {
  background-color: #f44336;
}

.problem-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  justify-content: center;
  margin-bottom: 20px;
}

.problem-buttons button {
  background: #ffcc80;
  border: none;
  padding: 10px 14px;
  border-radius: 10px;
  cursor: pointer;
  font-weight: bold;
  transition: background 0.3s ease;
}

.problem-buttons button:hover {
  background: #ffb74d;
}

.remedy-box {
  background: #f9fbe7;
  padding: 20px;
  border-radius: 15px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  text-align: left;
}

.dark .remedy-box,
.dark .search-box input {
  background-color: #222;
  color: #eee;
  border-color: #444;
}

.remedy-box h2 {
  color: #6d4c41;
}

.remedy-content {
  white-space: pre-line;
  margin-top: 10px;
  font-size: 1rem;
  line-height: 1.6;
}

.bottom-controls {
  display: flex;
  justify-content: center;
  gap: 15px;
  margin-top: 15px;
}

.bottom-controls button {
  padding: 10px 16px;
  border: none;
  background-color: #2196f3;
  color: white;
  border-radius: 8px;
  font-size: 1rem;
  cursor: pointer;
}

.loader {
  border: 6px solid #f3f3f3;
  border-top: 6px solid #4caf50;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  animation: spin 1s linear infinite;
  margin: 0 auto;
}

.spinner-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10px;
  padding: 20px 0;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.dark .main-wrapper {
  background: rgba(20, 20, 20, 0.85);
  backdrop-filter: blur(14px);
}

.dark .problem-buttons button {
  background-color: #444;
  color: white;
}

.dark .bottom-controls button {
  background-color: #333;
}