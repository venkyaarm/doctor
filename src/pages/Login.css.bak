/* Login.css */

/* Main container and card styling */
.login-container-new {
  display: flex; /* Enables Flexbox for centering */
  justify-content: center; /* Horizontally centers the content (the login card) */
  align-items: center; /* Vertically centers the content */
  min-height: 100vh; /* Ensures the container takes up the full height of the viewport */
  background: linear-gradient(135deg, #e0f2fe, #e9d5ff); /* A beautiful gradient background */
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding: 20px;
}

.login-card-new {
  background-color: white;
  padding: 40px;
  border-radius: 20px; /* More rounded corners */
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 400px;
  text-align: center;
  position: relative;
  overflow: hidden;
  animation: cardFadeIn 0.8s ease-out;
}

@keyframes cardFadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Header with icon and text */
.login-header-new {
  margin-bottom: 30px;
  position: relative;
}

.hospital-icon-new {
  font-size: 4rem;
  animation: pulse 2s infinite ease-in-out;
  margin-bottom: 10px;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

.login-title-new {
  font-size: 1.8rem;
  color: #333;
  font-weight: 700;
  margin-bottom: 5px;
}

.login-subtitle-new {
  font-size: 0.9rem;
  color: #666;
}

/* Form and input styling */
.login-form-new {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.form-group-new {
  text-align: left;
}

.input-label-new {
  display: block;
  font-size: 0.9rem;
  color: #555;
  margin-bottom: 5px;
  font-weight: 600;
}

.input-field-new {
  width: 100%;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 8px;
  font-size: 1rem;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.input-field-new:focus {
  outline: none;
  border-color: #6366f1; /* A nice purple focus color */
  box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
}

/* Login button styling */
.login-btn-new {
  width: 100%;
  padding: 15px;
  border: none;
  border-radius: 10px;
  background: linear-gradient(45deg, #6366f1, #8b5cf6); /* Purple gradient */
  color: white;
  font-size: 1.1rem;
  font-weight: 600;
  cursor: pointer;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  box-shadow: 0 5px 15px rgba(99, 102, 241, 0.2);
}

.login-btn-new:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 20px rgba(99, 102, 241, 0.3);
}

.login-btn-new:active {
  transform: translateY(0);
}

/* Register text styling */
.register-text-new {
  margin-top: 25px;
  font-size: 0.9rem;
  color: #666;
}

.register-link-new {
  color: #6366f1;
  text-decoration: none;
  font-weight: 600;
  transition: color 0.3s ease;
}

.register-link-new:hover {
  text-decoration: underline;
  color: #8b5cf6;
}
